  file = {Snapshot:\\\\filesrv4\\home$\\afdidehf\\.windows\\Application Data\\Zotero\\Zotero\\Profiles\\wi3wq94h.default\\zotero\\storage\\6Z4I5J8Q\\BF01132770.html:text/html}
